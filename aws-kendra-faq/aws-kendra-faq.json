{
  "typeName": "AWS::Kendra::Faq",
  "description": "An example resource schema demonstrating some basic constructs and validation rules.",
  "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-rpdk.git",
  "definitions": {
    "IndexId": {
      "description": "Unique ID of Index",
      "type": "string",
      "minLength": 36,
      "maxLength": 36,
      "pattern": "[a-zA-Z0-9][a-zA-Z0-9-]*"
    },
    "Description": {
      "description": "Description of Faq",
      "type": "string",
      "minLength": 1,
      "maxLength": 1000,
      "pattern": "^\\P{C}*$"
    },
    "S3Path": {
      "type": "object",
      "properties": {
        "Bucket": {
          "$ref": "#/definitions/S3BucketName"
        },
        "Key": {
          "$ref": "#/definitions/S3ObjectKey"
        }
      },
      "required": [
        "Bucket",
        "Key"
      ]
    },
    "S3BucketName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 63,
      "pattern": "[a-z0-9][\\.\\-a-z0-9]{1,61}[a-z0-9]"
    },
    "S3ObjectKey": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024
    },
    "FaqName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "[a-zA-Z0-9][a-zA-Z0-9_-]*"
    }
  },
  "properties": {
    "Id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "[a-zA-Z0-9][a-zA-Z0-9_-]*\\"
    },
    "IndexId": {
      "$ref": "#/definitions/S3BucketName"
    },
    "Name": {
      "$ref": "#/definitions/FaqName"
    },
    "Description": {
      "$ref": "#/definitions/Description"
    },
    "S3Path": {
      "$ref": "#/definitions/S3Path"
    },
    "RoleArn": {
      "description": "Role ARN",
      "type": "string",
      "minLength": 1,
      "maxLength": 1284,
      "pattern": "arn:[a-z0-9-\\.]{1,63}:[a-z0-9-\\.]{0,63}:[a-z0-9-\\.]{0,63}:[a-z0-9-\\.]{0,63}:[^/].{0,1023}"
    }
  },
  "additionalProperties": false,
  "required": [
    "IndexId",
    "Name",
    "S3Path",
    "RoleArn"
  ],
  "readOnlyProperties": [
    "/properties/Id"
  ],
  "createOnlyProperties": [
    "/properties/IndexId",
    "/properties/Name",
    "/properties/S3Path",
    "/properties/RoleArn",
    "/properties/Description"
  ],
  "primaryIdentifier": [
    "/properties/Id"
  ],
  "handlers": {
    "create": {
      "permissions": [
        "initech:CreateReport"
      ]
    }
  }
}
